<?xml version = "1.0" encoding ="utf-8"?>
<LinearLayout
 xmlns:tools ="http://schemas.android.com/apk/tools"
xmlns:app ="http://schemas.android.com/apk/res-auto"
xmlns:android= "http://schemas.android.com/apk/res/android"
android:layout_width ="match_parent"
 android:layout_height ="match_parent"
android:id="@+id/signup_1" 
android:gravity="center"
android:orientation="vertical"
android:background = "@color/login_color_7">
    <ScrollView
    android:layout_height="match_parent"
    android:layout_width ="match_parent"
    android:id="@+id/signup_1_1"
    android:layout_gravity ="center_vertical"
    android:fillViewport ="true"
    android:background = "@color/login_color_6">
        <LinearLayout
        android:layout_margin ="@dimen/container_margin_3"
        android:padding="@dimen/container_padding_3"
         android:layout_width ="match_parent"
        android:layout_height = "match_parent"
        android:layout_gravity ="center_vertical"
        android:orientation ="vertical"
        android:id ="@+id/signup_1_1_1"
        android:background ="@color/login_color_5">
            <LinearLayout
            android:layout_width ="match_parent"
            android:layout_height ="wrap_content"
            android:layout_gravity ="center_horizontal"
            android:padding ="@dimen/container_padding_3"
            android:layout_margin ="@dimen/container_margin_2"
            android:id ="@+id/signup_1_1_1_1"
            android:orientation ="vertical"
            android:background ="@color/login_color_5">
                <TextView
                android:layout_gravity ="left"
                android:layout_margin ="@dimen/content_margin_3"
                android:padding  = "@dimen/content_padding_2"
                 android:layout_height ="wrap_content"
                android:layout_width = "match_parent"
                android:id =  "@+id/signup_1_1_1_1_1" 
                android:text = "@string/username_text"
                android:textSize ="15sp" />
                <EditText
                android:layout_width ="match_parent"
                android:layout_height  ="wrap_content"
                android:padding  ="@dimen/container_padding_3"
                android:layout_margin="@dimen/container_margin_2"
                android:hint ="@string/username_text"
                android:id ="@+id/signup_1_1_1_1_2"
                android:layout_gravity ="center_horizontal"
                android:background ="@color/login_color_4"/>
                <TextView
                android:layout_margin ="@dimen/content_margin_3"
                android:padding = "@dimen/content_padding_3"
                android:layout_gravity = "center_horizontal"
                android:layout_height ="wrap_content"
                android:layout_width = "match_parent"
                android:id = "@+id/signup_1_1_1_1_3"  
                android:text = "@string/password_text"
                android:textSize = "15sp"/>
                <EditText
                android:layout_gravity = "center_horizontal"
                android:layout_width ="match_parent"
                 android:layout_height ="wrap_content"
                android:padding ="@dimen/content_padding_2"
                android:layout_margin = "@dimen/content_margin_2"
                android:id =  "@+id/signup_1_1_1_1_4"
                android:hint ="@string/password_text"
                android:background ="@color/login_color_4"/>
            </LinearLayout>
            <LinearLayout
            android:orientation ="vertical"
            android:layout_width ="match_parent" 
            android:layout_height ="wrap_content"
            android:layout_margin="@dimen/container_margin_2"
            android:padding = "@dimen/container_padding_2"
            android:id ="@+id/signup_1_1_1_2"
            android:layout_gravity = "center_horizontal">
                <Button
                android:layout_height ="wrap_content"
                android:layout_width ="match_parent"
                android:layout_margin="@dimen/content_margin_3"
                android:padding ="@dimen/content_padding_3"
                android:layout_gravity ="center_horizontal"
                android:id = "@+id/signup_1_1_1_2_1"
                android:text =  "@string/signup_text"/>
                <Button
                android:padding ="@dimen/content_padding_2"
                android:layout_margin ="@dimen/content_margin_3"
                android:layout_width = "match_parent"
                android:layout_height ="wrap_content"
                android:layout_gravity ="center_horizontal"
                android:id = "@+id/signup_1_1_1_2_2"
                android:text = "@string/login_text"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>