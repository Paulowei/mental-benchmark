                <Button
                android:layout_gravity = "left"
                android:layout_margin = "@dimen/puzzle_5_margin"
                android:padding = "@dimen/content_padding_3"  
                android:layout_height = "wrap_content"  
                android:layout_width = "wrap_content"  
                android:id = "@+id/puzzle_5_1_1_1_1_1" 
                android:text = "Navigate"
                android:textSize = "@dimen/main_text_size_6" 
                android:gravity = "center"   
                android:background = "@color/pale_golden_rod" >
                </Button>       
            </LinearLayout>
            <!-- wrap_content -->  
            <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height ="wrap_content"
            android:layout_gravity = "center_horizontal"
            android:id = "@+id/puzzle_5_1_1_1_2"
             android:layout_margin = "@dimen/puzzle_5_margin"
            android:padding = "@dimen/container_margin_3"  
            android:orientation = "vertical" 
            android:background = "@color/antique_white"  >  
                <TextView 
                android:layout_gravity = "center_horizontal"
                 android:layout_margin = "@dimen/puzzle_5_margin"
                android:padding = "@dimen/content_padding_4"
                android:id = "@+id/puzzle_5_1_1_1_2_1" 
                android:textSize = "@dimen/main_text_size_6"
                android:text = "Click Rate :  " 
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content" 
                android:background = "@color/nneon_blue" />
            </LinearLayout> 
            <LinearLayout
            android:layout_height = "wrap_content"
            android:layout_width  ="match_parent"
             android:layout_margin = "@dimen/puzzle_5_margin" 
            android:padding= "@dimen/container_padding_3" 
            android:orientation = "horizontal" 
            android:layout_gravity = "center_horizontal" 
            android:id  =   "@+id/puzzle_5_1_1_1_3" 
            android:background = "@color/quartz">    
                <EditText
                android:layout_weight = "1.5"   
                android:gravity = "center_horizontal" 
                android:layout_gravity = "center_vertical"
                android:layout_margin = "@dimen/content_margin_4"   
                android:layout_width = "wrap_content"   
                android:layout_height = "wrap_content"    
                android:id = "@+id/puzzle_5_1_1_1_3_1"      
                android:padding = "@dimen/content_padding_3"    
                android:hint = "@string/range_text" 
                android:background = "@color/grape_fruit"   />   
                <Button 
                android:layout_gravity = "center_vertical"
                android:gravity = "center_horizontal"
                android:layout_weight = "1.5"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content" 
                android:id = "@+id/puzzle_5_1_1_1_3_2"
                android:text = "@string/restart_string_4" 
                android:textSize = "@dimen/main_text_size_5" 
