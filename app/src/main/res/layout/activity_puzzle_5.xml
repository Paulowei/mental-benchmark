                android:id = "@+id/puzzle_5_1_1_1_4_1" 
                android:layout_height = "wrap_content"
                android:layout_width = "wrap_content" 
                android:layout_weight = "2.2" 
                android:textSize = "@dimen/main_text_size_6"  />  
                <!--   </TextView>  -->
                <!-- center_horizontal -->  
                <!--  android:layout_width = "match_parent"-->
                <Chronometer  
                android:layout_gravity ="center_vertical" 
                android:id = "@+id/puzzle_5_1_1_1_4_2"     
                 android:layout_margin = "@dimen/puzzle_5_margin"
                android:layout_weight = "2.2"
                android:padding = "@dimen/content_padding_3"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content" 
                android:textSize = "@dimen/chronometer_text_size"
                android:gravity = "center" /> 
            </LinearLayout> 
            <!-- center_horizontal
            android:layout_alignParentRight = "true"  -->
           <!-- </RelativeLayout> 
            android:layout_margin= "@dimen/container_margin_3" -->
