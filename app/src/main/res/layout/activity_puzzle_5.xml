            android:layout_margin = "@dimen/puzzle_5_margin"
            android:padding = "@dimen/container_padding_3"  
            android:layout_width  ="match_parent"
            android:layout_height = "wrap_content" 
            android:id = "@+id/puzzle_5_1_1_1_5"
            android:layout_gravity = "center_horizontal" 
            android:orientation = "horizontal" > 
                <Button
                android:layout_gravity = "center_vertical"  
                android:layout_weight = "1.6"  
                android:gravity = "center"    
                android:text = "Start"    
                android:textSize = "@dimen/main_text_size_6"  
                android:id = "@+id/puzzle_5_1_1_1_5_1"   
                android:layout_height = "wrap_content"  
                android:layout_width = "wrap_content"  
                 android:layout_margin = "@dimen/puzzle_5_margin" />  
                <Button 
                 android:layout_weight = "1.6"
                android:layout_gravity = "center_vertical"  
                android:gravity = "center"
                    android:id = "@+id/puzzle_5_1_1_1_5_2" 
                android:textSize = "@dimen/main_text_size_6"
                android:text = "Stop"   
                android:layout_height = "wrap_content"
                android:layout_width = "wrap_content"  
                 android:layout_margin = "@dimen/puzzle_5_margin"/>
            </LinearLayout>   
            <LinearLayout 
             android:layout_gravity =  "center_horizontal"
            android:padding = "@dimen/container_padding_2"
            android:layout_margin = "@dimen/puzzle_5_margin"
            android:layout_height = "wrap_content"
            android:layout_width = "wrap_content"   
            android:id = "@+id/puzzle_5_1_1_1_6"  >  
            <!--     android:layout_gravity = "center_vertical||center_horizontal" -->
                <Button
                android:layout_margin = "@dimen/puzzle_5_margin"
                android:padding = "@dimen/content_padding_4"
                android:layout_height = "120dp"
                android:layout_width = "180dp"
                android:id = "@+id/puzzle_5_1_1_1_6_1"
                 android:layout_centerHorizontal = "true"
                android:layout_centerVertical = "true" 
                android:textSize =  "@dimen/login_text_size_5" 
                android:text = "0" />
            </LinearLayout>   
